<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      loaded="navigatingTo"
      class="page">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="{{ L('group.title') }}"/>
    </ActionBar>
    <StackLayout verticalAlignment="center" >
        <Button text="{{ L('group.button_configure_group_contract') }}" tap="configureGroupContract" />
        <Button text="{{ L('group.button_create_qr') }}" tap="createQr" />
        <Button text="{{ L('group.button_scan_qr') }}" tap="readQr" />
    </StackLayout>
</Page>