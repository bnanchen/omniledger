<Page
    class="page"
    navigatingTo="onNavigatingTo">
    <ActionBar class="action-bar">
        <NavigationButton text="Go Back" android:icon="res://ic_arrow_back" tap="goBack"/>
        <Label class="action-bar-title" text="{{ L('configure_group.title') }}"/>
        <ActionItem tap="propose"
                    ios.systemIcon="0" ios.position="right"
                    android:icon="res://ic_done" android.position="actionBar"
                    visibility="{{ readOnly = 'collapsed' : 'visible'"/>
    </ActionBar>
    <GridLayout class="page-content" rows="auto, auto, auto, *, auto"
                columns="*,auto,*">
        <df:RadDataForm
            id="data-form"
            source="{{ dataForm }}"
            row="1" colSpan="3"
            isReadOnly="false">
            <df:RadDataForm.properties>
                <df:EntityProperty name="publicKeys" displayName="Public Keys" index="0">
                    <df:EntityProperty.editor>
                        <df:EntityProperty type="Text">
                        </df:EntityProperty>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
                <df:EntityProperty name="purpose" displayName="Purpose" index="1">
                    <df:EntityProperty.editor>
                        <df:EntityProperty type="Text">
                        </df:EntityProperty>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
                <df:EntityProperty name="voteThreshold" displayName="Vote Threshold" index="2">
                    <df:EntityProperty.editor>
                        <df:EntityProperty type="Text">
                        </df:EntityProperty>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
                <df:EntityProperty name="predecessor" displayName="Predecessor(s)" index="3">
                    <df:EntityProperty.editor>
                        <df:EntityProperty type="Text">
                        </df:EntityProperty>
                    </df:EntityProperty.editor>
                </df:EntityProperty>
                <df:RadDataForm.groups></df:RadDataForm.groups>
            </df:RadDataForm.properties>
        </df:RadDataForm>

        <Button text="Propose" tap="propose" class="btn btn-primary" row="2" colSpan="3" />
    </GridLayout>
</Page>